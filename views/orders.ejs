<div> <img src="/images/banner.jpg" class="img-fluid" alt="배너이미지" width="100%"> </div>

<div class="container" style="width: 1000px;">


        <h3>| 발주 확인</h3>
        <hr>
        <button type="button" class="btn btn-secondary">새로 고침</button>
        <a href="/orders/neworder" class="btn btn-primary">생산 추가</a>


        <table class="table table-striped" style="margin-top: 20px;">
            <thead class="thead">
              <tr>  
                <th> 발주 날짜 </th>
                <th> 발주 번호</th>
                <th> 생산품 </th>
                <th> 상태 </th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = (page * page_num) - page_num; i < (page * page_num); i++) {
                if(i > length){
                    i++;
                }else{     %>
                <tr>
                    <td> <%= orderdata[i].orderdate.toLocaleDateString(); %> </td>
                    <td> <%= orderdata[i].orderidx %> </td>
                    <td><%= orderdata[i].carname %></td>
                    <td><%= orderdata[i].orderstate %></td>
                </tr>
                <% }} %>
                
            </tbody>


              

        

            </table>
            <hr>


              <nav aria-label="...">
                <ul class="pagination justify-content-center">
                  <% if(page==1){%>
                  <li class="page-item disabled">
                    <a class="page-link" href="/orders/list/<%= previous %>" tabindex="-1">이전</a>
                  </li>
                  <% } else { %>
                    <li class="page-item">
                      <a class="page-link" href="/orders/list/<%= previous %>" tabindex="-1">이전</a>
                    </li>
                  <% } for(var j = 0; j < orderdata.length / page_num; j++){
                    if (page==(j+1)) {%>
            
                    <li class="page-item active"><a class="page-link" href="/orders/list/<%= j + 1 %>"><%= j + 1 %></a></li>
                    <% } else { %>
                    <li class="page-item"><a class="page-link" href="/orders/list/<%= j + 1 %>"><%= j + 1 %></a></li>
                  <% }} if(page==j){ %>
                  <li class="page-item disabled">
                    <a class="page-link" href="/orders/list/<%= next %>">다음</a>
                  </li>
                  <% }else { %>
                    <li class="page-item">
                      <a class="page-link" href="/orders/list/<%= next %>">다음</a>
                    </li>
                  <% }%>
                </ul>
                </nav>

</div>